import { useState, useEffect } from 'react'
import { motion } from 'framer-motion'
import { CheckCircleIcon, ClockIcon } from '@heroicons/react/24/outline'

const Dashboard = () => {
  const [transactions, setTransactions] = useState([
    {
      id: 1,
      customerName: 'Jane Smith',
      event: 'Tech Summit 2025',
      amount: 50000,
      status: 'completed',
      time: new Date().toISOString(),
      paymentMethod: 'Mobile Money'
    },
    {
      id: 2,
      customerName: 'John Doe',
      event: 'Music Festival',
      amount: 75000,
      status: 'pending',
      time: new Date().toISOString(),
      paymentMethod: 'Cash'
    },
  ])

  // Simulate real-time updates
  useEffect(() => {
    const interval = setInterval(() => {
      // In production, this would be a WebSocket connection
      const newTransaction = {
        id: Date.now(),
        customerName: `Customer ${Math.floor(Math.random() * 100)}`,
        event: 'Tech Summit 2025',
        amount: Math.floor(Math.random() * 100000) + 50000,
        status: Math.random() > 0.5 ? 'completed' : 'pending',
        time: new Date().toISOString(),
        paymentMethod: Math.random() > 0.5 ? 'Mobile Money' : 'Cash'
      }
      
      setTransactions(prev => [newTransaction, ...prev].slice(0, 20))
    }, 10000) // New transaction every 10 seconds

    return () => clearInterval(interval)
  }, [])

  return (
    <div>
      <div className="mb-8">
        <h1 className="font-clash font-bold text-4xl mb-2">Live Transaction Feed</h1>
        <p className="text-graytext">Monitor real-time ticket sales</p>
      </div>

      {/* Stats */}
      <div className="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          className="bg-white/5 backdrop-blur-sm rounded-lg p-6 border border-white/10"
        >
          <CheckCircleIcon className="h-8 w-8 text-green-400 mb-4" />
          <h3 className="text-2xl font-bold mb-1">
            {transactions.filter(t => t.status === 'completed').length}
          </h3>
          <p className="text-sm text-graytext">Completed Today</p>
        </motion.div>

        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.1 }}
          className="bg-white/5 backdrop-blur-sm rounded-lg p-6 border border-white/10"
        >
          <ClockIcon className="h-8 w-8 text-yellow-400 mb-4" />
          <h3 className="text-2xl font-bold mb-1">
            {transactions.filter(t => t.status === 'pending').length}
          </h3>
          <p className="text-sm text-graytext">Pending</p>
        </motion.div>

        <motion.div
          initial={{ opacity: 0, y: 20 }}
          animate={{ opacity: 1, y: 0 }}
          transition={{ delay: 0.2 }}
          className="bg-white/5 backdrop-blur-sm rounded-lg p-6 border border-white/10"
        >
          <div className="h-8 w-8 text-gold mb-4 font-bold text-xl">UGX</div>
          <h3 className="text-2xl font-bold mb-1">
            {transactions
              .filter(t => t.status === 'completed')
              .reduce((sum, t) => sum + t.amount, 0)
              .toLocaleString()}
          </h3>
          <p className="text-sm text-graytext">Total Revenue Today</p>
        </motion.div>
      </div>

      {/* Transaction Feed */}
      <motion.div
        initial={{ opacity: 0, y: 20 }}
        animate={{ opacity: 1, y: 0 }}
        transition={{ delay: 0.3 }}
        className="bg-white/5 backdrop-blur-sm rounded-lg border border-white/10"
      >
        <div className="p-6 border-b border-white/10">
          <h2 className="font-clash text-xl font-bold">Recent Transactions</h2>
        </div>

        <div className="divide-y divide-white/5 max-h-[600px] overflow-y-auto">
          {transactions.map((transaction, index) => (
            <motion.div
              key={transaction.id}
              initial={{ opacity: 0, x: -20 }}
              animate={{ opacity: 1, x: 0 }}
              transition={{ delay: index * 0.05 }}
              className="p-6 hover:bg-white/5 transition-colors"
            >
              <div className="flex items-center justify-between">
                <div className="flex-1">
                  <div className="flex items-center gap-3 mb-2">
                    <h3 className="font-semibold">{transaction.customerName}</h3>
                    <span className={`px-2 py-1 rounded-full text-xs font-medium ${
                      transaction.status === 'completed'
                        ? 'bg-green-400/20 text-green-400'
                        : 'bg-yellow-400/20 text-yellow-400'
                    }`}>
                      {transaction.status}
                    </span>
                  </div>
                  <p className="text-sm text-graytext mb-1">{transaction.event}</p>
                  <p className="text-xs text-graytext">
                    {new Date(transaction.time).toLocaleTimeString()} â€¢ {transaction.paymentMethod}
                  </p>
                </div>
                <div className="text-right">
                  <p className="text-xl font-bold text-gold">
                    UGX {transaction.amount.toLocaleString()}
                  </p>
                </div>
              </div>
            </motion.div>
          ))}
        </div>
      </motion.div>
    </div>
  )
}

export default Dashboard